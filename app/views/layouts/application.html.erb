<!DOCTYPE html>
<html>
<head>
  <title>CliqSynq</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="http://twitter.github.com/bootstrap/1.3.0/bootstrap.min.css">
</head>
<body>
<div class="container" id="page_container">
	<div class="row" id="login_status">
		<div class="offset-two-thirds span-one-third">
			<%if session[:member_id] %>
				Welcome <%= link_to Member.find_by_id(session[:member_id]).first_name, whoami_path %> | <%= link_to 'logout', logout_path, :method => :delete %>	
			<% end %>
		</div>
	</div>

<%= yield %>
</div>
</body>
</html>
