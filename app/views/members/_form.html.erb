<%= form_for(@member) do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% @member.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
  <legend>Enter Member Details</legend>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, :size => 20 %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, :size => 20 %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email, :size => 40 %>
  </div>
  <div class="field">
    <%= f.label :password, 'choose a password' %><br />
    <%= f.text_field :password, :size => 40 %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, 'confirm password' %><br />
    <%= f.text_field :password_confirmation, :size => 40 %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
